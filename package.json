{
  "name": "@cloudscape-design/demos",
  "version": "3.0.0",
  "scripts": {
    "typecheck": "tsc",
    "clean": "rm -rf lib",
    "lint": "eslint --fix --ignore-path .gitignore --ext ts,tsx,js,jsx .",
    "prepare": "husky install",
    "generate-html": "cross-env THEME=$npm_config_theme node ./scripts/generate-html-files",
    "webpack": "cross-env NODE_ENV=production webpack",
    "build:theme": "cross-env THEME=$npm_config_theme npm run webpack && npm run generate-html",
    "build": "npm run build:theme --theme=all",
    "start": "npm run start:theme",
    "start:theme": "cross-env NODE_ENV=development THEME=$npm_config_theme webpack-dev-server",
    "serve": "node ./scripts/dev-server.js",
    "jest": "node --experimental-vm-modules ./node_modules/.bin/jest ./test/**/*.test.ts",
    "serve-test": "run-p -r serve jest",
    "pretest": "npm-run-all -s clean lint typecheck build",
    "test": "npm run test-no-build",
    "test-no-build": "run-s test:*",
    "test:default": "cross-env ALWAYS_VISUAL_REFRESH=true npm run serve-test"
  },
  "devDependencies": {
    "@babel/core": "^7.18.13",
    "@babel/preset-env": "^7.18.10",
    "@babel/preset-react": "^7.18.6",
    "@babel/preset-typescript": "^7.18.6",
    "@cloudscape-design/board-components": "^3.0.0",
    "@cloudscape-design/browser-test-tools": "^3.0.0",
    "@cloudscape-design/chat-components": "^1.0.0",
    "@cloudscape-design/code-view": "^3.0.0",
    "@cloudscape-design/collection-hooks": "^1.0.0",
    "@cloudscape-design/component-toolkit": "^1.0.0-beta",
    "@cloudscape-design/components": "^3.0.0",
    "@cloudscape-design/design-tokens": "^3.0.0",
    "@cloudscape-design/global-styles": "^1.0.0",
    "@cloudscape-design/test-utils-core": "^1.0.0",
    "@cloudscape-design/theming-runtime": "^1.0.0",
    "@eslint-react/eslint-plugin": "^1.16.1",
    "@svgr/webpack": "^8.1.0",
    "@types/jest": "^29.5.14",
    "@types/lodash": "^4.14.184",
    "@types/node": "^20.16.8",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.10",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "ace-builds": "^1.32.6",
    "axe-core": "^4.4.3",
    "babel-loader": "^9.2.1",
    "copy-webpack-plugin": "^12.0.2",
    "cross-env": "^7.0.3",
    "css-loader": "^7.1.2",
    "date-fns": "^4.1.0",
    "eslint": "^8.22.0",
    "eslint-config-prettier": "^10.0.2",
    "eslint-plugin-header": "^3.1.1",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-react": "^7.30.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "husky": "^8.0.1",
    "jest": "^29.7.0",
    "lint-staged": "^15.4.3",
    "lodash": "^4.17.21",
    "mini-css-extract-plugin": "^2.6.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.5.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sass": "^1.54.5",
    "sass-loader": "^16.0.5",
    "ts-jest": "^29.2.5",
    "typescript": "^5.6.3",
    "url-loader": "^4.1.1",
    "webpack": "^5.98.0",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.0",
    "zod": "^3.23.8"
  },
  "browserslist": [
    "last 3 Chrome major versions",
    "last 3 Firefox major versions",
    "last 3 Edge major versions",
    "last 3 Safari major versions"
  ],
  "lint-staged": {
    "*.html": [
      "prettier --write"
    ],
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ],
    "package-lock.json": [
      "./scripts/clean-package-lock.js"
    ]
  },
  "private": true
}
