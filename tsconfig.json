{
  "compilerOptions": {
    "target": "es2017",
    "module": "esnext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "lib": ["es2017", "dom", "dom.iterable"],
    "noEmit": true,
    "declaration": false,
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "allowJs": false
  },
  "include": ["**/*.ts", "**/*.tsx"]
}
